{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Language Server -- Build",
			"type": "npm",
			"script": "build",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$tsc"
		},
		{
			"label": "Language Server -- Watch",
			"type": "npm",
			"script": "watch",
			"group": "build",
			"isBackground": true,
			"problemMatcher": "$tsc-watch"
		},
		{
			"type": "npm",
			"script": "install",
			"problemMatcher": []
		}
	]
}