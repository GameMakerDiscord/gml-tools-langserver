{
	"compilerOptions": {
		"noImplicitReturns": true,
		"target": "es2018",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "out",
		"lib": [
			"es2018",
			"dom" // dom is added due to ohm-js using dom.
		],
		"preserveConstEnums": true,
		"declaration": true,
		"declarationDir": "./out/declarations/",
		"sourceMap": true,
		"sourceRoot": ""
	},
	"include": [
		"./src/**/*.ts"
	]
}