{
	"compilerOptions": {
		"noImplicitReturns": true,
		"target": "es2018",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "out",
		"lib": [
			"es2018"
		],
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"preserveConstEnums": true,
		"declaration": true,
		"declarationDir": "./out/declarations/",
		"sourceMap": true
	},
	"include": [
		"./src/**/*.ts"
	]
}